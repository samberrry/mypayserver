<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="mypaydbmap.GoodsEntity" table="goods" schema="mypay">
        <id name="idgoods">
            <column name="idgoods" sql-type="int(11)"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="price">
            <column name="price" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="description">
            <column name="description" sql-type="varchar(200)" length="200" not-null="true"/>
        </property>
        <property name="additionDate">
            <column name="addition_date" sql-type="varchar(10)" length="10" not-null="true"/>
        </property>
        <property name="iduser">
            <column name="iduser" sql-type="int(11)"/>
        </property>
        <property name="idstore">
            <column name="idstore" sql-type="int(11)"/>
        </property>
        <property name="number">
            <column name="number" sql-type="int(11)"/>
        </property>
    </class>
</hibernate-mapping>